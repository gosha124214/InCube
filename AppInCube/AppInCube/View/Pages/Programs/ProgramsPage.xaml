<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInCube.View.Pages.Programs.ProgramsPage"
             Title="Программы"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <!-- Определяем строки для Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Для верхних Label -->
            <RowDefinition Height="*" />    <!-- Для ScrollView -->
            <RowDefinition Height="Auto" />  
        </Grid.RowDefinitions>

        <!-- Верхние Label -->
        <StackLayout Grid.Row="0" Padding="10">
            <Label Text="{Binding NumberOfAllObjectsInDataBase, StringFormat='Всего программ: {0}'}" 
                   FontSize="18" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" />

            <Label Text="{Binding LoadedProgramsCount, StringFormat='Загружено программ: {0}'}" 
                   FontSize="18" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" />
        </StackLayout>

        <!-- Прокручиваемый контент -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10">

                <CollectionView ItemsSource="{Binding TableBird}" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="5">
                                <StackLayout>
                                    <Label Text="{Binding NameBird}" 
                                           FontSize="30" 
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Id, StringFormat='Id птицы: {0}'}" 
                                           FontSize="20" />
                                    <Label Text="{Binding IdProgram, StringFormat='Id программы: {0}'}" 
                                           FontSize="20" />
                                    <Label Text="{Binding DaysUntilHatching, StringFormat='Дней до вылупления: {0}'}" 
                                           FontSize="20" />
                                    <BoxView HeightRequest="2" 
                                             BackgroundColor="Gray" 
                                             HorizontalOptions="FillAndExpand" 
                                             Margin="0,5" />
                                    <Image Source="{Binding ImageSource}" 
                                           HeightRequest="200" 
                                           Aspect="AspectFit" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnProgramTapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!-- Кнопка внизу -->
                <Button Text="Загрузить еще программы" 
                Clicked="OnLoadMoreClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="End" 
                Grid.Row="2" 
                BackgroundColor="Green"
                TextColor="White"/>
            </VerticalStackLayout>
            
        </ScrollView>

        <!-- Label для сообщения с закругленными углами -->
        <Frame x:Name="MessageFrame" 
               IsVisible="False" 
               BackgroundColor="Green"
               CornerRadius="5" 
               Padding="10" 
               Grid.RowSpan="3" 
               HorizontalOptions="Center" 
               VerticalOptions="Center">
            <Label x:Name="MessageLabel" 
                   Text="" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   TextColor="White"/>
        </Frame>
    </Grid>
</ContentPage>